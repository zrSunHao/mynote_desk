<UserControl x:Class="BlizzardWind.Desktop.Controls.Element.Paginator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlizzardWind.Desktop.Controls.Element"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="600">
    <Grid>
        <Border Background="ForestGreen" Opacity="0.1"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock Text="共18条 - 20/30页" VerticalAlignment="Center" Foreground="Gray"/>
            <ComboBox Height="30" Width="70">
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="50"/>
                <ComboBoxItem Content="100"/>
            </ComboBox>
            <Button Content="最前" Height="30" Width="60"/>
            <Button Content="上一页" Height="30" Width="60"/>
            <Button Content="下一页" Height="30" Width="60"/>
            <Button  Content="最后" Height="30" Width="60"/>
        </StackPanel>
    </Grid>
</UserControl>
